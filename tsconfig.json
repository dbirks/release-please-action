{
  "extends": "./node_modules/gts/tsconfig-google.json",
  "compilerOptions": {
    "esModuleInterop": true,
    "target": "ES2020",
    "allowSyntheticDefaultImports": true,
    "rootDir": ".",
    "outDir": "build",
    "resolveJsonModule": true
  },
  "include": [
    "src/*.ts",
    "src/**/*.ts",
    "test/*.ts",
    "test/**/*.ts",
    "system-test/*.ts"
  ]
}
